<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F6E7B2"
    android:layout_marginVertical="5dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_id_item_rc_void"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Id"
            android:textSize="20dp"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/icon_add"
            android:src="@drawable/icon_add"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_custom_item_rc_void"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="ID khach"
            android:textSize="20dp"
            android:padding="5dp"/>
        <Button
            android:id="@+id/btn_detail_void"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Xem"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_staff_item_rc_void"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="ID nhan vien"
            android:textSize="20dp"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_date_item_rc_void"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Ngay mua"
            android:textSize="20dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tv_status_item_rc_void"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Trang thai"
            android:textSize="20dp"
            android:padding="5dp"/>

    </LinearLayout>


</LinearLayout>