<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoidDetailActivity"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đơn Hàng"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#FF0000"/>


    <TextView
        android:id="@+id/tv_id_void"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID Hoa don"
        android:textSize="20dp"
        android:layout_marginVertical="10dp"
        />

    <TextView
        android:id="@+id/tv_id_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID Khach Hang"
        android:textSize="20dp"
        android:layout_marginVertical="10dp"
        />

    <TextView
        android:id="@+id/tv_ngay_mua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngay mua"
        android:textSize="20dp"
        android:layout_marginVertical="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        />

</LinearLayout>